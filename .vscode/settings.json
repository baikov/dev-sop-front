{
  /* Tailwindcss Setting */
  "tailwindCSS.includeLanguages": {
    "plaintext": "html"
  },
  "editor.hover.enabled": true,
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
      "strings": true
  },
  "tailwindCSS.experimental.configFile": "tailwind.config.ts",
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "ngClass",
    "ui"
  ],
  // ESLint
  "eslint.useFlatConfig": true,
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  // Nuxt
  "nuxtr.defaultPackageManager": "Yarn",
  "nuxtr.vueFiles.firstTag": "script",
  "nuxtr.vueFiles.script.type": "setup",
  "nuxtr.vueFiles.script.defaultLanguage": "ts",
  "nuxtr.vueFiles.style.addStyleTag": false,
  "nuxtr.vueFiles.style.alwaysScoped": true,
  "nuxtr.vueFiles.style.defaultLanguage": "css",
  // Vue Official
  "vue.server.maxOldSpaceSize": 4000,
  // Github Pull Requests
  "githubPullRequests.assignCreated": "${user}",
  "githubPullRequests.postCreate": "checkoutDefaultBranch",
  "githubIssues.issueBranchTitle": "${user}/issue#${issueNumber}"
}
